{
  "name": "@contextmesh/cli",
  "version": "0.1.0",
  "description": "CLI tool for ContextMesh - npm-like package manager for MCP connectors",
  "main": "dist/index.js",
  "bin": {
    "contextmesh": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "build:binaries": "npm run build && pkg dist/cli.js --targets node20-linux-x64,node20-win-x64,node20-macos-x64,node20-macos-arm64 --out-path binaries",
    "dev": "tsx src/cli.ts",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts --fix",
    "lint:check": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "prepare": "npm run build",
    "prepack": "npm run build",
    "release": "npm run build && npm run test && npm run typecheck",
    "semantic-release": "semantic-release",
    "version:check": "semantic-release --dry-run --no-ci"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cloudfloo/contextmesh-cli.git"
  },
  "keywords": [
    "contextmesh",
    "mcp",
    "cli",
    "package-manager",
    "model-context-protocol"
  ],
  "author": "ContextMesh Team",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cloudfloo/contextmesh-cli/issues"
  },
  "homepage": "https://github.com/cloudfloo/contextmesh-cli#readme",
  "dependencies": {
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "archiver": "^6.0.1",
    "axios": "^1.6.2",
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.10",
    "js-yaml": "^4.1.0",
    "ora": "^5.4.1",
    "semver": "^7.5.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/archiver": "^6.0.2",
    "@types/fs-extra": "^11.0.4",
    "@types/glob": "^8.1.0",
    "@types/jest": "^29.5.11",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.5",
    "@types/semver": "^7.5.6",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "pkg": "^5.8.1",
    "semantic-release": "^22.0.8",
    "ts-jest": "^29.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "pkg": {
    "scripts": "dist/**/*.js",
    "assets": [],
    "targets": [
      "node20-linux-x64",
      "node20-win-x64",
      "node20-macos-x64",
      "node20-macos-arm64"
    ],
    "outputPath": "binaries"
  }
}
